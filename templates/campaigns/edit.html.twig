{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include 'navegacion.html.twig' %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- header -->
                {% include 'header.html.twig' %}
                <!-- End of header -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="row">
                        <!-- Content Column -->
                        <div class="col-lg-12 tab-content">
                            <div id="client" class="tab-pane fade in active show">
                                <div class="card shadow mb-4">
                                    <!-- Card Header - Dropdown -->
                                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-primary">{% trans %}Campaign Info{% endtrans %}</h6>
                                    </div>
                                    <!-- Card Body -->
                                    <div class="card-body">
                                        {% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}
                                        {{ form_start(form, {'attr': {'id': 'info_client', 'class': 'col-md-12'}}) }}
                                        {%if isNew == 0 %}
                                            <div class="col-md-12">

                                            </div>
                                            <hr class="sidebar-divider">
                                        {%endif%}
                                        {{ form_widget(form) }}
                                        {{ form_end(form) }}
                                        <p class="msg text-success client-msg"></p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <div class="row">
                        <!-- Content Column -->
                        <div class="col-lg-12 tab-content">
                            <div id="client" class="tab-pane fade in active show">
                                <div class="card shadow mb-4">
                                    <!-- Card Header - Dropdown -->
                                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-primary">{% trans %}Active Users and improving conditions{% endtrans %}</h6>
                                    </div>
                                    <!-- Card Body -->
                                    <div class="card-body">
                                        <div id="table_conditions"></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    </div>
    {% include 'footer.html.twig' %}
    </div>
    <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <div class="modal fade" tabindex="-1" id="modal_flags"  role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{% trans %}All Countries{% endtrans %}</h5>
                    <a  data-dismiss="modal" aria-label="Close"><i class="fa fa-times-circle"></i></a>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>


    </body>
    <script>
        {%if isNew ==0 %}
        let countries_txt=  '{{campaign.paisesTXT|raw}}';
        let countries = countries_txt.split(',');
        countries_array = countries.map(name => name.toUpperCase())
        $('#form_paises').selectpicker('val', countries_array);
        let improving = '{{ improvingConditions|raw }}';
        let links = '[{}]';
        let codes = '[{}]';
        let users = '[{}]';
        {%endif%}
    </script>
    <script src="/js/common.js" type="application/javascript"></script>
    <script src="/js/campaigns_edit.js" type="application/javascript"></script>
    <script src="https://cdn.tiny.cloud/1/b4e3hjzcndgzy8gd5e6oecotgb2asaiwgvjvehtfqhdkt81y/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
