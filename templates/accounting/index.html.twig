{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <script src="/js/common.js" type="application/javascript"></script>
    <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include 'navegacion.html.twig' %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- header -->
                {% include 'header.html.twig' %}
                <!-- End of header -->


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="row">
                        <!-- Content Column -->

                        <div class="col-lg-12">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">{% trans %}Accounting{% endtrans %}</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="col col-md-12 mb-2">
                                        {% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}
                                        {{ form_start(form, {'attr': {'id': 'advanced_search'}}) }}
                                        {{ form_widget(form) }}
                                        {{ form_end(form) }}
                                        <ul class="nav nav-pills">
                                            {% for  key, month in months %}
                                                <li class="nav-item ">
                                                    <a class="nav-link month {% if key == current_month  %}active{% endif %}" id="{{ month }}_{{ key }}-tab" data-toggle="tab" data-target="#{{ month }}_{{ key }}"  role="tab" aria-controls="{{ month }}_{{ key }}" aria-selected="true" data-month="{{ key }}">{{ month }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 tab-content">
                            {% for  key, month in months %}
                                <div id="{{ month }}_{{ key }}" class="tab-pane fade {% if key == current_month  %}in active show{% endif %}">
                                    <div class="card shadow mb-4">

                                        <!-- Card Header - Dropdown -->
                                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                            <h6 class="m-0 font-weight-bold text-primary">{{ month }}</h6>
                                        </div>
                                        <!-- Card Body -->
                                        <div class="card-body overflow-auto">
                                            <div class="table_accounting"></div>
                                        </div>

                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
    </div>
    {% include 'footer.html.twig' %}
    </div>
    <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    </body>
    <script>
        let accounting = '{{ accounting|raw }}';
        let estados = '{{ status|raw }}';
    </script>
    <script src="/js/accounting.js" type="application/javascript"></script>
{% endblock %}
